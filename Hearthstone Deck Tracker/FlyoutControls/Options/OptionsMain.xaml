<UserControl x:Class="Hearthstone_Deck_Tracker.FlyoutControls.OptionsMain"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <DockPanel>
        <TreeView Name="TreeViewOptions" Width="200">
            <TreeViewItem Header="General">
                <TreeViewItem Name="TreeViewItemGeneralOverlay" Header="Overlay" Selected="TreeViewItemGeneralOverlay_OnSelected"/>
                <TreeViewItem Name="TreeViewItemGeneralDeckWindows" Header="Deck Windows" Selected="TreeViewItemGeneralDeckWindows_OnSelected"/>
                <TreeViewItem Name="TreeViewItemGeneralOther" Header="Other" Selected="TreeViewItemGeneralOther_OnSelected"/>
            </TreeViewItem>
            <TreeViewItem Header="Decks">
                <TreeViewItem Name="TreeViewItemDecksGeneral" Header="General" Selected="TreeViewItemDecksGeneral_OnSelected"/>
                <TreeViewItem Name="TreeViewItemDecksOpponent" Header="Opponent" Selected="TreeViewItemDecksOpponent_OnSelected"/>
                <TreeViewItem Name="TreeViewItemDecksPlayer" Header="Player" Selected="TreeViewItemDecksPlayer_OnSelected"/>
            </TreeViewItem>
            <TreeViewItem Header="Other">
                <TreeViewItem Name="TreeViewItemOtherTracker" Header="Tracker" Selected="TreeViewItemOtherTracker_OnSelected"/>
                <TreeViewItem Name="TreeViewItemOtherStats" Header="Record Games" Selected="TreeViewItemOtherStats_OnSelected"/>
                <TreeViewItem Name="TreeViewItemOtherExporting" Header="Exporting" Selected="TreeViewItemOtherExporting_OnSelected"/>
                <TreeViewItem Name="TreeViewItemOtherImporting" Header="Importing" Selected="TreeViewItemOtherImporting_OnSelected"/>
                <TreeViewItem Name="TreeViewItemOtherLogging" Header="Logging" Selected="TreeViewItemOtherLogging_OnSelected" Visibility="Collapsed"/>
            </TreeViewItem>
        </TreeView>
        <ContentControl Name="ContentControlOptions" />
    </DockPanel>
</UserControl>
